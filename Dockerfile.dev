# Development Dockerfile für React-Anwendung
FROM node:18-alpine

# Installiere Abhängigkeiten für native Pakete
RUN apk add --no-cache python3 make g++

# Set the working directory
WORKDIR /app

# Copy package.json* für besseres Caching
COPY package*.json ./

# Install alle dependencies (einschließlich devDependencies)
RUN npm ci --silent

# Copy alle Source-Dateien
COPY public/ ./public/
COPY src/ ./src/
COPY tailwind.config.js postcss.config.js ./

# React development server läuft auf Port 3000
ENV HOST=0.0.0.0
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true
EXPOSE 3000

# Healthcheck für Development
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

# Command für den Development Server
CMD ["npm", "start"]